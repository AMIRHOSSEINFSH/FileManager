<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView app:cardElevation="2dp"
    app:cardCornerRadius="8dp"
    android:layout_margin="4dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="160dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:paddingEnd="12dp"
        android:paddingStart="12dp"
        android:paddingBottom="16dp"
        android:paddingTop="12dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_file_more"
            android:rotation="90"
            app:srcCompat="@drawable/ic_more_vertical_black_24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/iv_file"
            android:layout_gravity="center_horizontal"
            app:srcCompat="@drawable/ic_folder_black_32dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginTop="8dp"
            android:id="@+id/tv_file_name"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/black"
            android:layout_gravity="center_horizontal"
            tools:text="Downloads"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>